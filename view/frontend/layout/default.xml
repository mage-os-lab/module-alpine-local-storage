<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:View/Layout:etc/page_configuration.xsd">
    <body>
        <referenceContainer name="alpine-js.store">
            <block
                name="alpine-js.cookies"
                template="MageOS_AlpineLocalStorage::script/cookies.phtml">
                <arguments>
                    <argument name="cookie_config" xsi:type="object">MageOS\AlpineLocalStorage\ViewModel\CookieConfig</argument>
                </arguments>
            </block>

            <block
                name="alpine-js.store.local-storage"
                template="MageOS_AlpineLocalStorage::script/store/localstorage-store.phtml">
                <arguments>
                    <argument name="section_config" xsi:type="object">MageOS\AlpineLocalStorage\ViewModel\SectionConfig</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
